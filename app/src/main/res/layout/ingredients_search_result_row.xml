<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/food_search_result_row_height">

    <TextView
            android:id="@+id/isrr_name"
            android:text="材料名"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/isrr_number"
            android:layout_weight="0.5"/>
    <TextView
            android:id="@+id/isrr_unit"
            android:text="単位"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"/>
    <Button
            android:id="@+id/isrr_addButton"
            android:text="＋"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" style="@style/Widget.AppCompat.Button.Colored"/>

</LinearLayout>