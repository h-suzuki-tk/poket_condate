<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/linearLayout2">
                <TextView
                        android:text="編集画面"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView14"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                    android:id="@+id/linearLayout3">

                <TableLayout
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteY="51dp"
                        tools:layout_editor_absoluteX="8dp"
                        android:stretchColumns="1">

                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:text="名前"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textview4"
                                android:textColor="#000000"
                                android:layout_margin="1dp"/>
                        <EditText
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:text="性別"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView6"
                                android:textColor="#000000"
                                android:layout_margin="1dp"/>
                        <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/sex">
                            <RadioButton
                                    android:text="男性"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/male"
                                    android:layout_weight="1"/>
                            <RadioButton
                                    android:text="女性"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/female"
                                    android:layout_weight="1"/>
                        </RadioGroup>

                    </TableRow>
                    <TableRow android:layout_width="match_parent"
                              android:layout_height="match_parent">
                        <TextView
                                android:text="年齢"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView7"
                                android:textColor="#000000"
                                android:background="#FFFFFF"
                                android:layout_margin="1dp"/>
                        <EditText
                                android:id="@+id/age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView9"
                                android:text="身長"
                                android:textColor="#000000"
                                android:layout_margin="1dp"/>
                        <EditText
                                android:id="@+id/height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="体重"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView11"
                                android:textColor="#000000"
                                android:layout_margin="1dp"/>
                        <EditText
                                android:id="@+id/weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
            <Button
                    android:text="登録情報の変更"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="0dp" android:id="@+id/button1" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3"/>
            <Button
                    android:text="キャンセル"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>